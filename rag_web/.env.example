# AWS Credentials
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# S3 Configuration
S3_BUCKET_NAME=rag-bedrock-documents

# Bedrock Knowledge Base (will be populated by setup script)
KNOWLEDGE_BASE_ID=
DATA_SOURCE_ID=

# LLM Configuration
# Set USE_BEDROCK_LLM=true to use Bedrock Claude instead of Gemini
USE_BEDROCK_LLM=false
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Gemini (used if USE_BEDROCK_LLM=false)
GOOGLE_API_KEY=your_gemini_key_here
GEMINI_MODEL=models/gemini-2.5-flash

# App Configuration
PORT=8000
